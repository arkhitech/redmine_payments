
<%= error_messages_for 'invoice_payment' %>

<div class="box tabular">
<p><%= f.text_field :amount, :label => l(:field_invoice_amount), :size => 10, :required => true %></p>
<p><%= f.text_field :payment_date, :label => l(:label_invoice_payment_date), :size => 12, :required => true %><%= calendar_for('invoice_payment_payment_date') %> </p>
<p><%= f.text_field :description, :style => "width: 98%;" %></p>
<%= fields_for @invoice_payment.build_payment_transaction_fee do |fee| %>
<p><label for="payment_transaction_fee_fee_amount">Fee Amount<span class="required"> *</span></label>
<%= fee.text_field :fee_amount, :label => l(:fee_amount), :size => 10, :required => true %></p>
<p><label for="payment_transaction_fee_fee_percentage">Fee Percentage<span class="required"> *</span></label>
<%= fee.text_field :fee_percentage, :label => l(:fee_amount), :size => 10, :required => true , :hint => "Only Floats are acceptable"  %></p>
<p><label for="payment_transaction_fee_description">Fee Description<span class="required"> *</span></label>
<%= fee.text_field :description,:label => l(:fee_description),:required => true, :style => "width: 50%;" %></p>
<p><label for="payment_net_Amount">Invoice Amount<span class="required"> *</span></label>
  <input id="payment_net_Amount" type="text" size="10" required="required" name="Net_Amount" label="Net Amount" ></input></p>
<% end %>
<% @invoice_payment.custom_field_values.each do |value| %>
  <p>
    <%= custom_field_tag_with_label :invoice_payment, value %>
  </p>
<% end -%>

</div>

<fieldset><legend><%= l(:label_attachment_plural) %></legend>
<% if @invoice_payment.attachments.any? -%>
  <%= link_to_attachments @invoice_payment, :thumbnails => true %>
<% end %>

<p><%= render :partial => 'attachments/form', :locals => {:container => @invoice_payment} %></p>
</fieldset>  
<br>




