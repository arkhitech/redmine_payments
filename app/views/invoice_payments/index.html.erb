<h2><%= "Invoice Payments"%></h2>
<%#= debug @invoice_payments %>
<div class="autoscroll">
  <table border="1" style="text-align:center" class="list invoice payments">
    <thead>
      <tr>
        <th> ID</th>
        <th>Amount</th>
        <th>Payment Date</th>
        <th>Invoice Number</th>
        <th>Description</th>
        <th>Author</th>
        <th>Created At</th>
        <th>Updated At</th>

      </tr>
    </thead>
    <tbody>
      <%  @invoice_payments.each do |invoice_payment| %>
        <tr class="<%=cycle("odd", "even")%>">
          <td>
            <%= link_to invoice_payment.id ,{:controller => :invoice_payments, :action => :show ,:id => invoice_payment.id}%>
 
<%#= link_to invoice_payment.id, invoice_payment_path(invoice_payment.id)%>
 <%#= link_to edit_invoice_payment, invoice_payment.id %>           
          </td>
          
          <td><%=invoice_payment.amount%></td>
          <td><%=invoice_payment.payment_date%></td>
          <td><%=link_to  invoice_payment.invoice.number,invoice_payment.invoice%></td>
          <td><%=invoice_payment.description%></td>
          <td><%=invoice_payment.author && invoice_payment.author.name%></td>
          <td><%=invoice_payment.created_at%></td>
          <td><%=invoice_payment.updated_at%></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>



