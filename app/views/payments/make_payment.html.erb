<%= form_tag controller: 'payments', action: 'show_payment' do %>
  <%= label_tag "Customer" %>
  <%= text_field_tag 'name',"Demo Merchant" %><br>

  <%= label_tag "Amount" %>
  <%= text_field_tag 'amount',"12.23" %><br>

  <%= label_tag "CardNumber" %>
  <%= text_field_tag 'number',"999000000000011" %><br>

  <%= label_tag "ExpiryDate" %>
  <%= text_field_tag 'date',"2012-12" %><br>

  <%= label_tag "VerifyCode" %>
  <%= text_field_tag 'code',"0000" %><br>
  
  <%= submit_tag 'Pay' %>
<% end %>